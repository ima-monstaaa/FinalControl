<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AndroidSocket"
    android:background="@drawable/landbackxhdpi"
    android:theme="@style/Base.V21.Theme.AppCompat"
    android:id="@+id/layout"
    android:measureAllChildren="false">

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/buttonflat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#7f0000"
        android:text="Button"
        android:layout_alignTop="@+id/more2"
        android:layout_alignEnd="@+id/multiple_actions"
        android:layout_alignStart="@+id/textClock" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00ffffff"
        android:visibility="gone" />


    <com.andexert.library.RippleView
        android:id="@+id/more2"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:translationZ="5dp"
        android:background="@drawable/myrect"
        android:layout_gravity="left|center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAKE"
            android:id="@+id/wakebtn"
            android:background="@drawable/myrect"
            android:textColor="#DCB439"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:maxWidth="100dp"
            android:layout_alignTop="@+id/more4"
            android:layout_centerHorizontal="true"
            android:translationZ="5dp"
            android:layout_gravity="left|center_vertical" />


    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more3"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myrect"
        android:translationZ="5dp"
        android:layout_gravity="right|center_vertical"
        android:layout_alignTop="@+id/more"
        android:layout_alignParentStart="true">

        <Button

            android:text="SHOW CAMERA"
            android:id="@+id/button2"
            android:textColor="#ffdcb439"
            android:background="@drawable/myrect"
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:layout_alignTop="@+id/wakebtn"
            android:layout_alignParentStart="true"
            android:translationZ="5dp"
            android:layout_gravity="right|center_vertical" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more"
        rv_centered="true"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:maxHeight="50dp"
        android:background="@drawable/myrect"
        android:translationZ="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/more2"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal|bottom">

        <Button

            android:text="Email"
            android:id="@+id/email"
            android:textColor="#DCB439"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myrect"
            android:singleLine="false"
            android:height="50dp"
            android:nestedScrollingEnabled="false"
            android:translationZ="5dp"
            android:layout_alignTop="@+id/more"
            android:layout_alignStart="@+id/more"
            android:layout_gravity="center" />


    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more4"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/more2"
        android:layout_alignTop="@+id/more2"
        android:translationZ="5dp"
        android:background="@drawable/myrect"
        android:layout_gravity="center">

        <Button
            android:layout_marginTop="99dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW PC"
            android:id="@+id/buttonvc"
            android:background="@drawable/myrect"
            android:textColor="#DCB439"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:maxWidth="100dp"
            android:translationZ="5dp"
            android:layout_gravity="left|bottom" />

    </com.andexert.library.RippleView>



    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_gravity="right|top"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textSize="50dp"
        android:password="false"
        android:translationZ="5dp"
        android:gravity="center|fill"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="338dp"
        android:layout_height="83dp"
        android:id="@+id/imageView"
        android:layout_gravity="right|top"
        android:src="@drawable/logodrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textClock"
        android:layout_toStartOf="@+id/more2" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textClock"
        android:layout_toEndOf="@+id/more2">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="Volume Y"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="Volume X"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="Volume MUTE"
            fab:fab_colorPressed="@color/white_pressed"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
