<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AndroidSocket"
    android:background="#ff6e6e6e"
    android:theme="@style/Base.V21.Theme.AppCompat">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/full_text"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonvc" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="SHOW PC"
        android:id="@+id/buttonvc"
        android:background="#7F0000"
        android:textColor="#DCB439"
        android:layout_marginTop="99dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="SHOW CAMERA"
        android:id="@+id/button2"
        android:textColor="#ffdcb439"
        android:background="#ff7f0000"
        android:singleLine="false"
        android:layout_alignTop="@+id/buttonvc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00ffffff" />

    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="WAKE"
        android:id="@+id/wakebtn"
        android:background="#7F0000"
        android:textColor="#DCB439"
        android:layout_alignTop="@+id/buttonvc"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
