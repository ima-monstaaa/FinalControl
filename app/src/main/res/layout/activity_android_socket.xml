<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AndroidSocket"
    android:background="@drawable/landback"
    android:theme="@style/Base.V21.Theme.AppCompat"
    android:id="@+id/layout"
    android:measureAllChildren="false">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00ffffff"
        android:visibility="gone" />


    <com.andexert.library.RippleView
        android:id="@+id/more2"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:translationZ="5dp"
        android:background="@drawable/myrect"
        android:layout_gravity="left|center_vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAKE"
            android:id="@+id/wakebtn"
            android:background="@drawable/myrect"
            android:textColor="#DCB439"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:maxWidth="100dp"
            android:layout_alignTop="@+id/more4"
            android:layout_centerHorizontal="true"
            android:translationZ="5dp"
            android:layout_gravity="left|center_vertical" />


    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more3"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/more2"
        android:layout_alignParentStart="true"
        android:background="@drawable/myrect"
        android:translationZ="5dp"
        android:layout_gravity="right|center_vertical">

        <Button

            android:text="SHOW CAMERA"
            android:id="@+id/button2"
            android:textColor="#ffdcb439"
            android:background="@drawable/myrect"
            android:singleLine="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:layout_alignTop="@+id/wakebtn"
            android:layout_alignParentStart="true"
            android:translationZ="5dp"
            android:layout_gravity="right|center_vertical" />

    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more"
        rv_centered="true"
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:maxHeight="50dp"
        android:background="@drawable/myrect"
        android:translationZ="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/more2"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal|bottom">

        <Button

            android:text="Email"
            android:id="@+id/email"
            android:textColor="#DCB439"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myrect"
            android:singleLine="false"
            android:height="50dp"
            android:nestedScrollingEnabled="false"
            android:translationZ="5dp"
            android:layout_alignTop="@+id/more"
            android:layout_alignStart="@+id/more"
            android:layout_gravity="center" />


    </com.andexert.library.RippleView>

    <com.andexert.library.RippleView
        android:id="@+id/more4"
        rv_centered="true"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/more2"
        android:layout_alignTop="@+id/more2"
        android:translationZ="5dp"
        android:background="@drawable/myrect"
        android:layout_gravity="center">

        <Button
            android:layout_marginTop="99dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW PC"
            android:id="@+id/buttonvc"
            android:background="@drawable/myrect"
            android:textColor="#DCB439"
            android:padding="@dimen/abc_button_padding_horizontal_material"
            android:maxWidth="100dp"
            android:translationZ="5dp"
            android:layout_gravity="left|bottom" />

    </com.andexert.library.RippleView>

    <TextClock
        android:layout_width="204dp"
        android:layout_height="75dp"
        android:id="@+id/textClock"
        android:layout_gravity="right|top"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textSize="50dp"
        android:password="false"
        android:translationZ="5dp"
        android:gravity="center|fill" />

    <ImageView
        android:layout_width="338dp"
        android:layout_height="83dp"
        android:id="@+id/imageView"
        android:layout_gravity="left|top"
        android:src="@drawable/logodrop" />


</FrameLayout>
