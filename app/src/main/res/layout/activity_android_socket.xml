<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AndroidSocket"
    android:background="@drawable/landbackxhdpi"
    android:theme="@style/Base.V21.Theme.AppCompat"
    android:id="@+id/layout"
    android:measureAllChildren="false">

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/wakebtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#7f0000"
        android:text="Start Class"
        android:textColor="#DCB439"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#ff494949"
        android:text="email"
        android:textColor="#DCB439"
        android:layout_alignTop="@+id/buttonvc"
        android:layout_alignParentEnd="true" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#7f0000"
        android:text="Show Camera"
        android:textColor="#DCB439"
        android:layout_below="@+id/buttonvc"
        android:layout_toEndOf="@+id/endbtn" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/buttonvc"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#7f0000"
        android:text="Show Computer"
        android:textColor="#DCB439"
        android:layout_alignTop="@+id/wakebtn"
        android:layout_toEndOf="@+id/wakebtn" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/endbtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="#7f0000"
        android:text="End Class"
        android:textColor="#DCB439"
        android:layout_below="@+id/wakebtn"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00ffffff"
        android:visibility="gone" />


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_gravity="right|top"
        android:autoText="false"
        android:elegantTextHeight="false"
        android:textSize="50dp"
        android:password="false"
        android:translationZ="5dp"
        android:gravity="center|fill"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="338dp"
        android:layout_height="83dp"
        android:id="@+id/imageView"
        android:layout_gravity="right|top"
        android:src="@drawable/logodrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textClock" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="Volume Y"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="Volume X"
            fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="Volume MUTE"
            fab:fab_colorPressed="@color/white_pressed"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>
